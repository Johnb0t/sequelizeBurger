<h1 class="center-align">Burgers!</h1>

  <div class="container">
    <div class="row">
      <div class="col s6 offset-s3 flow-text">
        <h4 class="center-align">Add a burger</h4>
          <div class="form-group center-align">
            <form class="create-update-form" action="/" method="POST">
                  <div class="form-group">
                    <label for="burger">Burger Name:</label>
                    <input type="text" id="burger" name="burger_name">
                  </div>
                  <button class="waves-effect waves-light btn blue darken-2" type="submit">Add Burger</button>
            </form>
          </div>
        </div>
      </div>
    <div class="row">
      <div id="results" class="center-align">
        <div class="col s6">
            {{#each burgers}}
              <div id="toBeEaten" class="center-align">
                {{#unless this.devoured}}
                  <h4 class="flow-text">{{this.id}}. {{this.burger_name}}</h4>
                  <form action="/devour/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button class="waves-effect waves-light btn red darken-4" type="submit" id="devour">Devour!<br>
                  </form>
                {{/unless}}  
              </div>
            {{/each}}
        </div>
      </div>
      <div class="row">
        <div class="col s6">
            {{#each burgers}}
              <div id="eaten" class="center-align">
                {{#if this.devoured}}
                  <h4 class="flow-text">{{this.id}}. {{this.burger_name}}</h4>
                  <form action="/putitback/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="false">
                    <button class="waves-effect waves-light btn green darken-4" type="submit" id="throwUp">Put It Back<br>
                  </form>
                {{/if}}
              </div>
            {{/each}}
        </div>
      </div>
  </div>